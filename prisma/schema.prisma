generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Collection {
  id          Int    @id @default(autoincrement())
  movie_id    Int
  user_email  String
  poster_path String?  
  movie_title String

  @@unique([user_email, movie_id])
}
